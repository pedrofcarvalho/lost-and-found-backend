{
    "env": {
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ]
    },
    "extends": [
        "eslint:recommended", 
        "standard-with-typescript", 
        "plugin:prettier/recommended"
    ],
    "root": true,
    "plugins": ["@typescript-eslint", "prettier"],
    "ignorePatterns": [
        "dist",
        ".github",
        "node_modules",
        "package-lock.json"
    ]
}
